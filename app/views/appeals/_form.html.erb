<%= simple_form_for(@appeal) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
    <%= f.input :active %>
    <%= f.input :appeal %>
    <%= f.input :recipient %>
    <%= f.input :delivery_address %>
    <%= f.label :region_id %>
    <%= f.collection_select :region_id, @regions, :id, :region,  {include_blank: "Select a region:"}, {:id => "select-thing"} %>
    <%= f.input :description %>
    <%= f.file_field :image %>
  </div>
  <br>
  <div class="btn btn-primary btn-lg">
      <%= f.button :submit %>
  </div>
  <% end %>
  <br>
  <%= link_to 'Back', appeals_path %>