<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Manage Appeals</h1>
            <br>
            <%= link_to "Add New Appeal", 'appeals/new', class:"btn btn-primary btn-lg" %>
        </div>
    </div>
</div>
<h2>Current Appeals:</h2>
<table>
    <tr>
        <th>Appeal Name</th>
        <th>Recipient</th>
        <th>Active?</th>
    </tr>
    <% @appeals.each do |appeal| %>
    <tr>
        <td> <%= appeal.appeal %></td>
        <td> <%= appeal.recipient %></td>
        <td> <%= appeal.active %></td>
        <td> <%= link_to 'Show More', appeal_path(appeal) %></td>

    </tr>
    <% end %>
</table>
<hr>

<%= link_to 'Back', root_path %>