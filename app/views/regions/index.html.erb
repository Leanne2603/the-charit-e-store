<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Manage Regions</h1>
            <br>
            <%= link_to "Add New Region", 'regions/new', class:"btn btn-primary btn-lg" %>
        </div>
    </div>
</div>
<h2>Regions:</h2>

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Region Name</th>
      </tr>
    </thead>
    <tbody>
    </tr>
        <% @regions.each do |region| %>
        <tr>
            <td> <%= region.region %></td>
            <td> <%= link_to 'Show More', region_path(region) %></td>
        </tr>
        <% end %>
    <tr>
    </table>
    <%= link_to 'Back', root_path %>