<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4">Manage Items</h1>
            <br>
            <%= link_to "Add New Item", 'items/new', class:"btn btn-primary btn-lg" %>
        </div>
    </div>
</div>
<h2>Items:</h2>

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col"></th>
        <th scope="col">Item Name</th>
        <th scope="col">Item Price</th>
        <th scope="col">Item Available?</th>
      </tr>
    </thead>
    <tbody>
    </tr>
        <% @items.each do |item| %>
        <tr>
            <% if item.image.attached? %>
                <td><%= cl_image_tag(item.image.key, crop: :scale, width: 150, cloud_name: 'desxzkkeh') %></td>
            <% else %>
                <td><%= "No image" %></td>
            <% end %>
            <td> <%= item.name %></td>
            <td>$<%= "%.2f" % item.price %></td>
            <td> <%= item.available %></td>
            <td> <%= link_to 'Show More', item_path(item) %></td>
        </tr>
        <% end %>
    <tr>
    </table>
    <%= link_to 'Back', root_path %>